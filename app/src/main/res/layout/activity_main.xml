<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conr1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bn_grass"
    android:padding="30dp"
    tools:context=".MainActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/conr2"
    android:layout_width="150dp"
    android:layout_height="235dp"
    app:layout_constraintTop_toTopOf="@id/conr1"
    app:layout_constraintStart_toStartOf="@id/conr1"
    android:background="@drawable/oval_logo"
    />

    <ImageView
        android:id="@+id/yggdrasillis"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/new_yggdrasill"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/gray"


        />

    <TextView
        android:id="@+id/ygddrasill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="185dp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/oval"
        android:fontFamily="sans-serif-condensed"
        android:gravity="end"
        android:padding="10dp"

        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/conr2"
        app:layout_constraintBottom_toBottomOf="@id/conr1"
        android:gravity="center"
        android:layout_marginVertical="270dp"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_marginTop="150dp"
        android:textColorHint="@color/black"
        android:fontFamily="sans-serif-light"
        android:hint="@string/email"
        android:background="@drawable/oval"
        android:backgroundTint="@color/light"
        />

    <TextView
        android:id="@+id/task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:text="@string/task"
        android:textSize="17sp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"

        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/black"
        android:fontFamily="sans-serif-light"
        android:hint="@string/password"
        android:background="@drawable/oval"
        android:backgroundTint="@color/light"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_signing"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/sign"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/pass"
        android:textSize="16sp"
        android:layout_marginTop="18dp"
        android:background="@drawable/fields"
        android:textColor="@color/cardview_dark_background"
        />










</androidx.constraintlayout.widget.ConstraintLayout>