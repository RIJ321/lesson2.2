<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/tw_result"
    android:background="@color/black"
    tools:context=".Calculate">

    <RelativeLayout
        android:id="@+id/tw_field"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tw_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="0"
            android:fontFamily="@font/sfpro_regular"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="90sp"


            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tw_field"

        >

        <Button
            android:id="@+id/clear_text"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:backgroundTint="#a5a5a5"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="35sp"

            />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:backgroundTint="#a5a5a5"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/percent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:backgroundTint="#a5a5a5"
            android:text="%"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/delenie"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/calc_orange"
            android:text="รท"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:background="@color/black"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"

        >

        <Button
            android:id="@+id/seven"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/eight"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="7dp"
            android:background="@drawable/oval"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/nine"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/umnojenie"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/calc_orange"
            android:text="ร"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"

        >

        <Button
            android:id="@+id/four"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/five"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/six"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/plus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/calc_orange"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"

        >

        <Button
            android:id="@+id/one"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/two"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/three"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/minus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/calc_orange"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/main_container"
        app:layout_constraintTop_toBottomOf="@id/line4"

        >

        <Button
            android:id="@+id/zero"
            android:layout_width="195dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text="0"
            android:textCursorDrawable="@color/calc_orange"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/floating"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:text=","
            android:fontFamily="@font/sfpro_medium"
            android:textColor="@color/white"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/resulting"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/calc_orange"
            android:text="="
            android:textColor="@color/white"
            android:textSize="35sp"

            />

    </LinearLayout>


